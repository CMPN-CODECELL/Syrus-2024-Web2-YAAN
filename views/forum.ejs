    <h2>Existing posts:</h2>
    <% if (forums.length> 0) { %>
        <div class="existing-posts">
            <% forums.forEach(forum=> { %>
                <div class="forum-post">
                    <h2>
                        <%= forum.heading %>
                    </h2>
                    <p>
                        <%= forum.description %>
                    </p>
                    <p>Created by: <%= forum.createdBy.username %>
                    </p>
                    <p>Created at: <%= forum.createdAt.toDateString() %>
                    </p>
                    <p>Tags: <%= forum.tags.join(', ') %></p>
          <p>Likes: <%= forum.likes %></p>

          <% if (forum.comments.length > 0) { %>
            <h3>Comments:</h3>
            <ul>
              <% forum.comments.forEach(comment => { %>
                <li><%= comment.content %> <br> <%= comment.author %> (<%= comment.createdAt.toDateString() %>)</li>
              <% }) %>
            </ul>
          <% } %>

          <button class="add-comment-btn">Add Comment</button>
          <form class="comment-form" action="/comment" method="POST" style="display: none;">
            <input type="hidden" name="forumId" value="<%= forum._id %>">
            <textarea name="comment" placeholder="Type your comment here..." required></textarea><br>
            <button type="submit">Post</button>
          </form>

        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>No posts in the forum.</p>
  <% } %>

  <h2>Create New Forum Post</h2>
  <form action="/forum" method="POST">
    <label for="heading">Heading:</label><br>
    <input type="text" id="heading" name="heading" required><br>
    <label for="description">Description:</label><br>
    <textarea id="description" name="description" required></textarea><br>
    <label for="tags">Tags (comma-separated):</label><br>
    <input type="text" id="tags" name="tags" required><br>
    <button type="submit">Create Post</button>
  </form>

  <script>
    const addCommentBtns = document.querySelectorAll(".add-comment-btn");
    const commentForms = document.querySelectorAll(".comment-form");

    addCommentBtns.forEach((btn, index) => {
        btn.addEventListener("click", () => {
            // Hide the button when clicked
            btn.style.display = "none";
            commentForms[index].style.display = "block";
        });
    });
</script>

</body>

</html>