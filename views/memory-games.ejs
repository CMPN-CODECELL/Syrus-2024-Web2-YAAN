  <h1>Mental games</h1>

  <!-- Form to select a game -->
  <form id="gameForm" action="/memory-games" method="POST">
    <input type="radio" id="g1Radio" name="gametype" value="game1">
    <label for="g1Radio" class="radio-button">Memory Cards</label>

    <input type="radio" id="g2Radio" name="gametype" value="game2">
    <label for="g2Radio" class="radio-button">Game 2</label>

    <input type="radio" id="g3Radio" name="gametype" value="game3">
    <label for="g3Radio" class="radio-button">Game 3</label>

    <button type="submit" id="playGameBtn">Play Game</button>
  </form>

</body>
<script>    // Function to handle form submission
  document.getElementById('gameForm').addEventListener('submit', function (event) {
    // Get the selected game value
    const selectedGame = document.querySelector('input[name="gametype"]:checked');

    if (!selectedGame) {
      // Prevent form submission if no game is selected
      event.preventDefault();
      alert('Please select a game to play.');
    } else {
      // Continue with form submission
      console.log('Selected game:', selectedGame.value);
    }
  });
</script>

